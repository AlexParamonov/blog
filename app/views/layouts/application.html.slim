doctype 5
html
  head
    title = yield(:title).presence || "Blog"
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
    meta name="viewport" content="width=device-width, initial-scale=1.0"
  body
    .row
      .eight.columns
        h1 
          a href='http://blog.ap-project.org' Blog 
          small 
            | at 
            a href="http://ap-project.org" ap-project
      .four.columns
        ul.navigation-top
          li= link_to 'Home', '/'
          li= link_to 'Posts', posts_url
      hr

    .row
      .nine.columns
        = render 'shared/flash', flash: flash
        = yield

      aside.three.columns.panel
        h5 Categories
        ul.side-nav
          li bla
          li bla

    footer.row
      .twelve.columns
        hr
        .row
          .six.columns
            | &copy; Copyright Alexander Paramonov

          .six.columns
            ul.inline-list.right
              li= link_to 'Posts', posts_url
              li= link_to 'Admin posts', admin_posts_url
