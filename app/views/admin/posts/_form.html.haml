= form_for [:admin, @post] do |f|
  = @post.render_errors self
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :summary
    = f.text_area :summary
  .field
    = f.label :content
    = f.text_area :content
  = @post.render_tags self
  .actions
    = f.submit t 'post.button.publish'
