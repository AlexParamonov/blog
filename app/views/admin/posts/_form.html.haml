= form_for [:admin, @post],  :html => { :class => "form-horizontal" } do |f|
  = @post.render_errors self
  .control-group
    = f.label :title, class: 'control-label'
    .controls
      = f.text_field :title, class: 'input-xxlarge'
  .control-group
    = f.label :summary, class: 'control-label'
    .controls
      = f.text_area :summary, class: 'input-xxlarge', rows: 5
  .control-group
    = f.label :content, class: 'control-label'
    .controls
      = f.text_area :content, class: 'input-xxlarge', rows: 30
  .control-group
    %label.control-label{for: :tags}Tags
    .controls
      = @post.render_tags self
  .form-actions
    = f.submit t('post.button.publish'), class: 'btn btn-primary'
